<div class="d-flex justify-content-between align-items-center mb-5">
    <h1 class="page-header mb-0">
        <i class="fas fa-chart-line me-3"></i>SYSTEM REPORTS
    </h1>
    <a href="/admin/dashboard" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
    </a>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3 shadow">
            <div class="card-header fw-bold">
                <i class="fas fa-money-bill-wave me-2"></i>TOTAL SALES
            </div>
            <div class="card-body">
                <h2 class="card-title fw-bold">
                    <%= totalSales.toFixed(2) %> SAR
                </h2>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white fw-bold">
                <i class="fas fa-fire me-2"></i>TOP SELLING PRODUCTS
            </div>
            <div class="card-body">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Branch</th>
                            <th>Sold</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% topProducts.forEach(p=> { %>
                            <tr>
                                <td class="fw-bold">
                                    <i class="fas fa-coffee text-muted me-2"></i>
                                    <%= p.name %>
                                </td>
                                <td>
                                    <%= p.branch_name %>
                                </td>
                                <td>
                                    <span class="badge bg-success">
                                        <%= p.sold %>
                                    </span>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white fw-bold">
                <i class="fas fa-building me-2"></i>SALES BY BRANCH
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Branch</th>
                            <th>Orders</th>
                            <th>Total Sales</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% salesByBranch.forEach(b=> { %>
                            <tr>
                                <td class="fw-bold">
                                    <i class="fas fa-building text-muted me-2"></i>
                                    <%= b.name %>
                                </td>
                                <td>
                                    <span class="badge bg-primary">
                                        <%= b.count %>
                                    </span>
                                </td>
                                <td class="fw-bold text-success">
                                    <%= b.total.toFixed(2) %> SAR
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>