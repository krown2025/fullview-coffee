<div class="d-flex justify-content-between align-items-center mb-5">
    <h1 class="page-header mb-0">
        <i class="fas fa-crown me-3"></i>SUPER ADMIN DASHBOARD
    </h1>
    <div>
        <button type="button" class="btn btn-secondary me-2" data-bs-toggle="modal" data-bs-target="#qrModal">
            <i class="fas fa-qrcode me-2"></i>QR Code
        </button>
        <a href="/admin/reports" class="btn btn-info text-white me-2">
            <i class="fas fa-chart-bar me-2"></i>View Reports
        </a>
        <a href="/admin/logout" class="btn btn-danger">
            <i class="fas fa-sign-out-alt me-2"></i>Logout
        </a>
    </div>
</div>

<div class="row">
    <!-- Branches Section -->
    <div class="col-md-6">
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-primary text-white">
                <i class="fas fa-building me-2"></i>MANAGE BRANCHES
            </div>
            <div class="card-body">
                <h5 class="fw-bold mb-3">Add New Branch</h5>
                <form action="/admin/branch/create" method="POST" class="mb-4">
                    <div class="mb-2">
                        <input type="text" name="name" class="form-control" placeholder="Branch Name" required>
                    </div>
                    <div class="mb-2">
                        <input type="text" name="subdomain" class="form-control" placeholder="Subdomain (e.g., riyadh)"
                            required>
                    </div>
                    <div class="mb-2">
                        <textarea name="description" class="form-control" placeholder="Branch Description (Optional)"
                            rows="2"></textarea>
                    </div>
                    <button type="submit" class="btn btn-success w-100">
                        <i class="fas fa-plus me-2"></i>Create Branch
                    </button>
                </form>

                <h5 class="fw-bold mb-3">Existing Branches</h5>
                <ul class="list-group">
                    <% branches.forEach(branch=> { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>
                                    <%= branch.name %>
                                </strong> (<%= branch.subdomain %>)
                                    <span class="badge bg-<%= branch.is_active ? 'success' : 'secondary' %> ms-2">
                                        <%= branch.is_active ? 'Active' : 'Paused' %>
                                    </span>
                            </div>
                            <div class="btn-group btn-group-sm">
                                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal"
                                    data-bs-target="#editBranchModal<%= branch.id %>">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </button>
                                <form action="/admin/branch/toggle-status/<%= branch.id %>" method="POST"
                                    class="d-inline">
                                    <button type="submit" class="btn btn-outline-warning">
                                        <i class="fas fa-<%= branch.is_active ? 'pause' : 'play' %> me-1"></i>
                                        <%= branch.is_active ? 'Pause' : 'Resume' %>
                                    </button>
                                </form>
                                <form action="/admin/branch/delete/<%= branch.id %>" method="POST" class="d-inline"
                                    onsubmit="return confirm('Are you sure you want to delete this branch? This cannot be undone.');">
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </li>

                        <!-- Edit Modal -->
                        <div class="modal fade" id="editBranchModal<%= branch.id %>" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Edit Branch: <%= branch.name %>
                                        </h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <form action="/admin/branch/edit/<%= branch.id %>" method="POST">
                                        <div class="modal-body">
                                            <div class="mb-3">
                                                <label class="form-label fw-bold">Branch Name</label>
                                                <input type="text" name="name" class="form-control"
                                                    value="<%= branch.name %>" required>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label fw-bold">Subdomain</label>
                                                <input type="text" name="subdomain" class="form-control"
                                                    value="<%= branch.subdomain %>" required>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label fw-bold">Description</label>
                                                <textarea name="description" class="form-control"
                                                    rows="2"><%= branch.description || '' %></textarea>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">Save Changes</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </ul>
            </div>
        </div>
    </div>

    <!-- Users Section -->
    <div class="col-md-6">
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-info text-white">
                <i class="fas fa-users-cog me-2"></i>MANAGE BRANCH ADMINS
            </div>
            <div class="card-body">
                <h5 class="fw-bold mb-3">Add Branch Admin</h5>
                <form action="/admin/user/create" method="POST" class="mb-4">
                    <div class="mb-2">
                        <select name="branch_id" class="form-select" required>
                            <option value="">Select Branch</option>
                            <% branches.forEach(branch=> { %>
                                <option value="<%= branch.id %>">
                                    <%= branch.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="mb-2">
                        <input type="text" name="name" class="form-control" placeholder="Full Name" required>
                    </div>
                    <div class="mb-2">
                        <input type="text" name="username" class="form-control" placeholder="Username" required>
                    </div>
                    <div class="mb-2">
                        <input type="password" name="password" class="form-control" placeholder="Password" required>
                    </div>
                    <button type="submit" class="btn btn-success w-100">
                        <i class="fas fa-user-plus me-2"></i>Create Admin
                    </button>
                </form>

                <h5 class="fw-bold mb-3">Existing Users</h5>
                <ul class="list-group">
                    <% users.forEach(user=> { %>
                        <li class="list-group-item">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-user-circle fa-2x text-muted me-3"></i>
                                <div>
                                    <strong>
                                        <%= user.name %>
                                    </strong> (<%= user.username %>)
                                        <br>
                                        <small class="text-muted">
                                            <i class="fas fa-id-badge me-1"></i>Role: <%= user.role %>
                                                <% if(user.branch_name) { %>
                                                    | <i class="fas fa-building me-1"></i>Branch: <%= user.branch_name
                                                        %>
                                                        <% } %>
                                        </small>
                                </div>
                            </div>
                        </li>
                        <% }) %>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- QR Code Modal -->
<div class="modal fade" id="qrModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">System QR Code</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img src="/uploads/QR.PNG" alt="QR Code" class="img-fluid" style="max-width: 300px;">
                <p class="mt-3 text-muted">Scan to visit the main menu</p>
            </div>
        </div>
    </div>
</div>