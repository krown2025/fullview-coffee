<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Branch Settings</h1>
        <a href="/branch/dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    <div class="card">
        <div class="card-body">
            <form action="/branch/settings" method="POST">
                <% let stripe_key='' ; let vat_number='' ; settings.forEach(s=> {
                    if(s.setting_key === 'stripe_key') stripe_key = s.setting_value;
                    if(s.setting_key === 'vat_number') vat_number = s.setting_value;
                    });
                    %>
                    <div class="mb-3">
                        <label class="form-label">Stripe API Key</label>
                        <input type="text" name="stripe_key" class="form-control" value="<%= stripe_key %>">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">VAT Number</label>
                        <input type="text" name="vat_number" class="form-control" value="<%= vat_number %>">
                    </div>
                    <button type="submit" class="btn btn-primary">Save Settings</button>
            </form>
        </div>
    </div>
</div>