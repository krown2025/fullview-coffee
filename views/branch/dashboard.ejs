<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-header">
        <%= branch.name %> Dashboard
    </h1>
    <div>
        <a href="/branch/reports" class="btn btn-info text-white">
            <i class="fas fa-chart-bar me-2"></i>Reports
        </a>
        <a href="/branch/promotions" class="btn btn-warning text-dark">
            <i class="fas fa-tag me-2"></i>Promotions
        </a>
        <a href="/branch/staff" class="btn btn-primary">
            <i class="fas fa-users me-2"></i>Staff
        </a>
        <a href="/branch/settings" class="btn btn-secondary">
            <i class="fas fa-cog me-2"></i>Settings
        </a>
        <a href="/admin/logout" class="btn btn-danger">
            <i class="fas fa-sign-out-alt me-2"></i>Logout
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body text-center">
                <h5><i class="fas fa-qrcode me-2"></i>Branch QR Code</h5>
                <img src="<%= qrCodeUrl %>" alt="QR Code" class="img-fluid" style="max-width: 200px;">
                <p class="mt-2">Scan to view menu</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Categories -->
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <i class="fas fa-list me-2"></i>Categories
            </div>
            <div class="card-body">
                <% function getCategoryIcon(name) { var lower=name.toLowerCase(); if ((lower.includes('قهوة') ||
                    lower.includes('coffee')) && (lower.includes('بارد') || lower.includes('cold') ||
                    lower.includes('ice') || lower.includes('مثلج'))) return 'fa-glass-water' ; if
                    (lower.includes('قهوة') || (lower.includes('coffee') && !lower.includes('shop')))
                    return 'fa-mug-hot' ; if (lower.includes('شاي') || lower.includes('tea')) return 'fa-mug-saucer' ;
                    if (lower.includes('بارد') || lower.includes('cold') || lower.includes('ice') ||
                    lower.includes('مثلج')) return 'fa-glass-water' ; if (lower.includes('ماء') ||
                    lower.includes('water')) return 'fa-bottle-water' ; if (lower.includes('سندو') ||
                    lower.includes('sandwich') || lower.includes('burger')) return 'fa-burger' ; if
                    (lower.includes('مخبوز') || lower.includes('bakery') || lower.includes('cake'))
                    return 'fa-bread-slice' ; if (lower.includes('بيتزا') || lower.includes('pizza'))
                    return 'fa-pizza-slice' ; if (lower.includes('مناقيش') || lower.includes('manakish'))
                    return 'fa-plate-wheat' ; if (lower.includes('عصير') || lower.includes('juice'))
                    return 'fa-glass-citrus' ; return 'fa-utensils' ; } %>
                    <form action="/branch/category/create" method="POST" enctype="multipart/form-data" class="mb-4">
                        <div class="mb-2">
                            <input type="text" name="name" class="form-control" placeholder="Category Name" required>
                        </div>
                        <div class="mb-2">
                            <input type="file" name="image" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-plus me-2"></i>Add Category
                        </button>
                    </form>
                    <ul class="list-group">
                        <% categories.forEach(cat=> { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>
                                    <% if (cat.image) { %>
                                        <img src="<%= cat.image %>" alt="<%= cat.name %>" class="me-2"
                                            style="width: 30px; height: 30px; object-fit: contain;">
                                        <% } else { %>
                                            <i class="fas <%= getCategoryIcon(cat.name) %> me-2 text-muted"></i>
                                            <% } %>
                                                <%= cat.name %>
                                </span>
                                <div>
                                    <button type="button" class="btn btn-sm btn-warning me-1" data-bs-toggle="modal"
                                        data-bs-target="#editCategoryModal<%= cat.id %>">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </button>
                                    <form action="/branch/category/delete/<%= cat.id %>" method="POST" class="d-inline"
                                        onsubmit="return confirm('Are you sure you want to delete this category?')">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </li>

                            <!-- Edit Category Modal -->
                            <div class="modal fade" id="editCategoryModal<%= cat.id %>" tabindex="-1"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Edit Category</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <form action="/branch/category/edit/<%= cat.id %>" method="POST"
                                            enctype="multipart/form-data">
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label class="form-label">Category Name</label>
                                                    <input type="text" name="name" class="form-control"
                                                        value="<%= cat.name %>" required>
                                                </div>
                                                <% if (cat.image) { %>
                                                    <div class="mb-3">
                                                        <label class="form-label">Current Icon</label>
                                                        <div>
                                                            <img src="<%= cat.image %>" alt="<%= cat.name %>"
                                                                style="width: 60px; height: 60px; object-fit: contain;">
                                                        </div>
                                                    </div>
                                                    <% } %>
                                                        <div class="mb-3">
                                                            <label class="form-label">New Icon (Optional)</label>
                                                            <input type="file" name="image" class="form-control">
                                                        </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </ul>
            </div>
        </div>
    </div>

    <!-- Products -->
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <i class="fas fa-shopping-bag me-2"></i>Products
            </div>
            <div class="card-body">
                <form action="/branch/product/create" method="POST" enctype="multipart/form-data" class="mb-4 row">
                    <div class="col-md-4 mb-2">
                        <select name="category_id" class="form-select" required>
                            <option value="">Select Category</option>
                            <% categories.forEach(cat=> { %>
                                <option value="<%= cat.id %>">
                                    <%= cat.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="col-md-4 mb-2">
                        <input type="text" name="name" class="form-control" placeholder="Product Name" required>
                    </div>
                    <div class="col-md-4 mb-2">
                        <input type="number" step="0.01" name="base_price" class="form-control" placeholder="Price"
                            required>
                    </div>
                    <div class="col-md-12 mb-2">
                        <textarea name="description" class="form-control" placeholder="Description"></textarea>
                    </div>
                    <div class="col-md-12 mb-2">
                        <input type="file" name="image" class="form-control">
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-plus me-2"></i>Add Product
                        </button>
                    </div>
                </form>

                <!-- Category Tabs -->
                <ul class="nav nav-tabs mb-3" id="productTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all"
                            type="button" role="tab" onclick="filterProducts('all')">
                            <i class="fas fa-th me-1"></i>All
                        </button>
                    </li>
                    <% categories.forEach(cat=> { %>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="tab-<%= cat.id %>" data-bs-toggle="tab"
                                data-bs-target="#cat-<%= cat.id %>" type="button" role="tab"
                                onclick="filterProducts('<%= cat.id %>')">
                                <% if (cat.image) { %>
                                    <img src="<%= cat.image %>" alt="<%= cat.name %>" class="me-1"
                                        style="width: 20px; height: 20px; object-fit: contain;">
                                    <% } else { %>
                                        <i class="fas <%= getCategoryIcon(cat.name) %> me-1"></i>
                                        <% } %>
                                            <%= cat.name %>
                            </button>
                        </li>
                        <% }) %>
                </ul>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="productsTableBody">
                        <% products.forEach(prod=> { %>
                            <tr class="product-row" data-category-id="<%= prod.category_id %>">
                                <td>
                                    <% if(prod.image) { %>
                                        <img src="<%= prod.image %>" alt="img" class="rounded me-2"
                                            style="width: 40px; height: 40px; object-fit: cover;">
                                        <% } %>
                                            <%= prod.name %>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        <%= prod.category_name %>
                                    </span>
                                </td>
                                <td>
                                    <%= prod.base_price %> SAR
                                </td>
                                <td>
                                    <a href="/branch/product/edit/<%= prod.id %>" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="/branch/product/delete/<%= prod.id %>" method="POST" class="d-inline"
                                        onsubmit="return confirm('Are you sure?')">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>

                <script>
                    function filterProducts(categoryId) {
                        const rows = document.querySelectorAll('.product-row');
                        rows.forEach(row => {
                            if (categoryId === 'all' || row.dataset.categoryId === categoryId) {
                                row.style.display = '';
                            } else {
                                row.style.display = 'none';
                            }
                        });
                    }
                </script>
            </div>
        </div>
    </div>
</div>